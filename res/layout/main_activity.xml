<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_DSP_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ToggleButton
        android:id="@+id/tb_DSP_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher_aphex"
        android:checked="true"
        android:disabledAlpha="5"
        android:text="@string/toggle_button"
        android:textOff="DSP OFF"
        android:textOn="DSP ON" />

    <Button
        android:id="@+id/btn_nav_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_settings" />    

</LinearLayout>
